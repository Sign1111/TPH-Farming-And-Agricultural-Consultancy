@model Ade_Farming.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <img src="~/Images/IMG-20250929-WA0003.jpg" alt="Logo" class="img-fluid" style="max-height:100px;" />
                    </div>

                    <h3 class="text-center mb-4">Register</h3>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsSeller" class="form-check-input" type="checkbox" id="isSellerCheck" />
                            <label asp-for="IsSeller" class="form-check-label"></label>
                        </div>

                        <div id="sellerFields" style="display:none;">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" id="addressInput" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Contact" class="form-label"></label>
                                <input asp-for="Contact" class="form-control" id="contactInput" />
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender" class="form-select" id="genderSelect">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Question1" class="form-label">Are you a registered farmer?</label>
                                <select asp-for="Question1" class="form-select" id="question1Select">
                                    <option value="">Select an answer</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                                <span asp-validation-for="Question1" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Question2" class="form-label">Do you sell or supply farm produce?</label>
                                <select asp-for="Question2" class="form-select" id="question2Select">
                                    <option value="">Select an answer</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                                <span asp-validation-for="Question2" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Login">Already have an account? Login</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#isSellerCheck').change(function () {
                const isSeller = $(this).is(':checked');

                if (isSeller) {
                    $('#sellerFields').slideDown();

                    // Make seller-related fields required
                    $('#addressInput, #contactInput, #genderSelect, #question1Select, #question2Select')
                        .attr('required', true);
                } else {
                    $('#sellerFields').slideUp();

                    // Remove required attributes
                    $('#addressInput, #contactInput, #genderSelect, #question1Select, #question2Select')
                        .removeAttr('required');
                }
            });
        });
    </script>
}
