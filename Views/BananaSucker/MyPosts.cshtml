@model IEnumerable<Ade_Farming.Models.BananaSuckerPost>

@{
    ViewData["Title"] = "My Banana Sucker Posts";
}

<h2 class="mb-4">My Banana Sucker Posts</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<a class="btn btn-primary mb-3" asp-action="Create">Create New Post</a>

@if (!Model.Any())
{
    <p>No posts yet.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(post.ImagePath))
                    {
                        <a href="@post.ImagePath" target="_blank">
                            <img src="@post.ImagePath" class="card-img-top" alt="@post.Title" style="height:200px; object-fit:cover;" />
                        </a>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Description</p>
                        <p class="mb-0"><strong>Seller:</strong> @post.SellerName</p>
                        <p class="mb-0"><strong>Email:</strong> @post.SellerEmail</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <small class="text-muted">Created: @post.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                        <div>
                            <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this post?');">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
