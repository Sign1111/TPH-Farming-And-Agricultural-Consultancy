	<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

	<script>
		$("#menu-close").click(function (e) {
			e.preventDefault();
			$("#sidebar-wrapper").toggleClass("active");
		});
		$("#menu-toggle").click(function (e) {
			e.preventDefault();
			$("#sidebar-wrapper").toggleClass("active");
		});
		const form = document.getElementById('contactForm');
		const formMessages = document.getElementById('form-messages');

		form.addEventListener('submit', async function (e) {
			e.preventDefault();

			formMessages.textContent = 'Sending…';
			formMessages.style.color = 'white';

			const formData = new FormData(form);

			try {
				const response = await fetch(form.action, {
					method: 'POST',
					body: formData
				});

				if (response.ok) {
					formMessages.textContent = '✅ Thank you! Your comment has been sent.';
					formMessages.style.color = 'black';
					form.reset();
				} else {
					formMessages.textContent = '❌ Sorry, something went wrong. Please try again.';
					formMessages.style.color = 'red';
				}
			} catch (error) {
				formMessages.textContent = '⚠️ Network error. Please try again.';
				formMessages.style.color = 'red';
			}
		});
		const connection = new signalR.HubConnectionBuilder()
			.withUrl("/adminHub")
			.withAutomaticReconnect()
			.build();

		connection.on("ReceiveForceLogout", () => {
			alert("You have been removed from Admin. Logging out...");
			window.location.href = "/Account/Login";
		});

		connection.start()
			.then(() => console.log("SignalR connected"))
			.catch(err => console.error("SignalR connection error:", err));

		// Optional notification for admin assignment
		connection.on("ReceiveAdminAssigned", function () {
			alert("You have been granted Admin privileges!");
		});

		connection.start().catch(err => console.error(err.toString()));

	</script>
